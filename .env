# ==========================================
# For Neon + Vercel deployment, copy to .env and update values

# --- Application Configuration ---
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
APP_NAME=Medical Coverage System
APP_VERSION=3.0.0

# --- Database Configuration (Neon PostgreSQL) ---
# Get this from your Neon dashboard: https://console.neon.tech
DATABASE_URL=postgresql://neondb_owner:npg_qFvigJjV4Ao8@ep-spring-sky-a4cx9ht7-pooler.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# Legacy database variables (for backward compatibility)
DB_HOST=[neon-host]
DB_PORT=5432
DB_NAME=[database-name]
DB_USER=[username]
DB_PASSWORD=[password]
DB_SSL=true

# Service Ports (for unified deployment)
FRONTEND_PORT=3000
BACKEND_PORT=3001
FINANCE_PORT=5000
HTTP_PORT=80
HTTPS_PORT=443
REDIS_PORT=6379
PROMETHEUS_PORT=9090

# --- Database Configuration (Unified PostgreSQL) ---
POSTGRES_HOST=postgres-unified
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
POSTGRES_DB=medical_coverage
POSTGRES_MULTIPLE_DATABASES=medical_coverage_finance

# Database URLs (unified deployment)
DATABASE_URL=postgres://postgres:CHANGE_THIS_PASSWORD_IN_PRODUCTION@postgres-unified:5432/medical_coverage
FINANCE_DATABASE_URL=postgres://postgres:CHANGE_THIS_PASSWORD_IN_PRODUCTION@postgres-unified:5432/medical_coverage_finance

# Legacy Database URL (backward compatibility)
DATABASE_SSL_MODE=prefer
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_MAX_CONNECTIONS=20

# --- Redis Configuration (Unified Redis) ---
REDIS_HOST=redis-unified
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
REDIS_KEY_PREFIX=medcoverage:

# Session Management
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_IN_PRODUCTION
SESSION_REDIS_DB=2
SESSION_REDIS_KEY_PREFIX=session:

# --- Authentication & Security ---
# IMPORTANT: Change these in production!
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION_AT_LEAST_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_JWT_REFRESH_SECRET_IN_PRODUCTION_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# --- Rate Limiting and Security ---
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ENABLED=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5000
CORS_CREDENTIALS=true
HELMET_ENABLED=true

# --- Email Configuration ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@medicalcoverage.com
FROM_NAME=Medical Coverage System
EMAIL_TEMPLATES_PATH=./server/emailTemplates

# --- File Storage Configuration ---
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
FILE_STORAGE_TYPE=local

# --- AWS S3 Configuration (Optional - for production file storage) ---
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_S3_ENDPOINT=https://s3.amazonaws.com

