# ==========================================
# Medical Coverage System - Environment Configuration
# ==========================================
# Copy this file to .env and update with your production values

# --- Application Configuration ---
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
APP_NAME=Medical Coverage System
APP_VERSION=2.0.0

# --- Database Configuration ---
DATABASE_URL=postgresql://username:password@localhost:5432/medical_coverage_db
DATABASE_SSL_MODE=prefer
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_MAX_CONNECTIONS=20

# --- Authentication & Security ---
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# --- Rate Limiting and Security ---
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ENABLED=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5000
CORS_CREDENTIALS=true
HELMET_ENABLED=true

# --- Email Configuration ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@medicalcoverage.com
FROM_NAME=Medical Coverage System
EMAIL_TEMPLATES_PATH=./server/emailTemplates

# --- File Storage Configuration ---
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
FILE_STORAGE_TYPE=local

# --- AWS S3 Configuration (Optional - for production file storage) ---
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_S3_ENDPOINT=https://s3.amazonaws.com

# --- Redis Configuration (Optional - for caching and sessions) ---
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password
# REDIS_DB=0

# --- Background Jobs Configuration ---
# ENABLE_BACKGROUND_JOBS=true
# JOB_QUEUE_REDIS_URL=redis://localhost:6379/1
# JOB_CONCURRENCY=5
# FAILED_JOB_TTL=86400000

# --- Monitoring and Logging ---
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_FORMAT=combined

# --- Monitoring Services (Optional) ---
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key
# DATADOG_API_KEY=your-datadog-key

# --- SSL Configuration (for HTTPS in production) ---
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# FORCE_HTTPS=false

# --- Backup Configuration ---
DB_BACKUP_PASSWORD=secure-backup-password
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# --- Feature Flags ---
ENABLE_MEMBER_ONBOARDING=true
ENABLE_ADMIN_DASHBOARD=true
ENABLE_AI_RECOMMENDATIONS=false
ENABLE_WELLNESS_PROGRAMS=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_EMAIL_NOTIFICATIONS=true

# --- AI & Personalization Configuration ---
AI_MODEL_URL=https://api.openai.com/v1
AI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7
PERSONALIZATION_ENABLED=true

# --- Wellness & Gamification ---
WELLNESS_POINTS_PER_ACTION=10
WELLNESS_STREAK_BONUS_MULTIPLIER=1.5
WELLNESS_LEVEL_UP_THRESHOLD=100

# --- Email Service Configuration ---
EMAIL_SERVICE_ENABLED=true
EMAIL_BATCH_SIZE=50
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=1000

# --- Document Management ---
DOCUMENT_VERIFICATION_ENABLED=true
DOCUMENT_EXPIRY_DAYS=365
DOCUMENT_AUTO_DELETE_ENABLED=false

# --- Development Specific ---
DEV_SEED_DATA=true
DEV_MOCK_EMAIL_SERVICE=true
DEV_ENABLE_CORS_DEBUG=true

# --- Production Overrides ---
# NODE_ENV=production
# PORT=3000
# LOG_LEVEL=warn
# FORCE_HTTPS=true
# ENABLE_BACKGROUND_JOBS=true
# BACKUP_ENABLED=true
# AI_RECOMMENDATIONS_ENABLED=true