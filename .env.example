# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/medical_coverage_db

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars

# Server Configuration
PORT=5000
NODE_ENV=development
HOSTNAME=0.0.0.0

# Database Backup (Optional)
DB_BACKUP_PASSWORD=secure-backup-password

# Rate Limiting and Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@medicalcoverage.com

# Application Settings
BCRYPT_ROUNDS=12
TOKEN_EXPIRY_MINUTES=15
REFRESH_TOKEN_EXPIRY_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log