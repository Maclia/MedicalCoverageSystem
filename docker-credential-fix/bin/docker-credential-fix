#!/usr/bin/env node

const { spawn } = require('child_process');
const path = require('path');
const fs = require('fs');

// Determine the script directory
const scriptDir = path.dirname(__filename);
const srcDir = path.join(scriptDir, '..', 'src');

// Check if we're running in development mode
const isDev = fs.existsSync(path.join(scriptDir, '..', 'src', 'index.js'));

const mainScript = isDev
  ? path.join(srcDir, 'index.js')
  : path.join(scriptDir, '..', 'lib', 'index.js');

// Spawn the main script with Node.js
const child = spawn('node', [mainScript, ...process.argv.slice(2)], {
  stdio: 'inherit',
  cwd: process.cwd(),
  env: process.env
});

child.on('exit', (code) => {
  process.exit(code);
});

// Handle process termination
process.on('SIGINT', () => {
  child.kill('SIGINT');
});

process.on('SIGTERM', () => {
  child.kill('SIGTERM');
});