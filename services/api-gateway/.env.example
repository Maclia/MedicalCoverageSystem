# API Gateway Configuration
NODE_ENV=development
PORT=3000

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ISSUER=medical-coverage-system
JWT_AUDIENCE=medical-api-gateway

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Service URLs
CORE_SERVICE_URL=http://localhost:3001
CORE_SERVICE_TIMEOUT=5000
CORE_SERVICE_RETRIES=3

INSURANCE_SERVICE_URL=http://localhost:3002
INSURANCE_SERVICE_TIMEOUT=5000
INSURANCE_SERVICE_RETRIES=3

HOSPITAL_SERVICE_URL=http://localhost:3003
HOSPITAL_SERVICE_TIMEOUT=5000
HOSPITAL_SERVICE_RETRIES=3

BILLING_SERVICE_URL=http://localhost:3004
BILLING_SERVICE_TIMEOUT=5000
BILLING_SERVICE_RETRIES=3

CLAIMS_SERVICE_URL=http://localhost:3005
CLAIMS_SERVICE_TIMEOUT=5000
CLAIMS_SERVICE_RETRIES=3

PAYMENT_SERVICE_URL=http://localhost:3006
PAYMENT_SERVICE_TIMEOUT=5000
PAYMENT_SERVICE_RETRIES=3

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=2000
HEALTH_CHECK_RETRIES=3

# Logging Configuration
LOG_LEVEL=info
LOGGING_ENABLED=true

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003
ENABLE_CSP=true
TRUST_PROXY=false

# Monitoring Configuration
PROMETHEUS_ENABLED=false
METRICS_PATH=/metrics