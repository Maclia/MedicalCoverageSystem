{
  "name": "@medical-coverage/crm-service",
  "version": "1.0.0",
  "description": "CRM management microservice for Medical Coverage System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "docker:build": "docker build -t medical-coverage/crm-service .",
    "docker:run": "docker run -p 3006:3006 medical-coverage/crm-service"
  },
  "keywords": ["crm", "sales", "leads", "microservice", "typescript"],
  "author": "Medical Coverage System",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.8.1",
    "zod": "^3.22.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "drizzle-orm": "^0.28.6",
    "postgres": "^3.4.3",
    "pg": "^8.11.1",
    "redis": "^4.6.8",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.3",
    "bull": "^4.11.3",
    "socket.io": "^4.7.2",
    "pdfkit": "^0.13.0",
    "exceljs": "^4.3.0",
    "csv-writer": "^1.6.0",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/sdk-node": "^0.41.2",
    "@opentelemetry/auto-instrumentations-node": "^0.39.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.2",
    "@types/node-cron": "^3.0.8",
    "@types/nodemailer": "^6.4.9",
    "@types/pdfkit": "^0.12.9",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "drizzle-kit": "^0.19.13",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}